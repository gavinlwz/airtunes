<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mycompany.airtunes.SongDisplay"
    android:background="#133754">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/albumCover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="hymn for the weekend"
        android:id="@+id/songTitle"
        android:layout_below="@+id/albumCover"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:minLines="2"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="artist name"
        android:id="@+id/artistName"
        android:layout_below="@+id/songTitle"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        />
    <ImageButton android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/favoriteoff"
        android:background="#00ffffff"
        android:onClick="onFavoriteButtonClick"
        android:layout_below="@id/artistName"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
