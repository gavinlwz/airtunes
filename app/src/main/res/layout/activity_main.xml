<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ff000000"
    tools:context="com.mycompany.airtunes.MainActivity">

    <TextView
        android:id="@+id/groupTagView"
        android:text="Click to search or create group: "
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/groupTagView"
        android:id="@+id/enterGroup"
        android:onClick="onGoToGroupButtonClick" />

    <TextView
        android:id="@+id/userTagView"
        android:text="Click to search for a user profile: "
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:layout_below="@id/enterGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/userTagView"
        android:id="@+id/goToUserProfile"
        android:onClick="onGoToProfileButtonClick"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/goToUserProfile"
        android:id="@+id/viewMyProfile"
        android:onClick="onViewMyProfileClick"/>

</RelativeLayout>
