<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mycompany.airtunes.UserProfileActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:text="New Text"
        android:id="@+id/fullName" />

    <ImageButton
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="2"
        android:id="@+id/profilePic"
        android:layout_below="@+id/fullName" />
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Logout"
        android:id="@+id/favSongsButton"
        android:onClick="viewFavSongs"
         />
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Search"
        android:id="@+id/searchUserButton"
        android:onClick="launchSearch"
        android:layout_below="@+id/profilePic" />

    <TextView
        android:id="@+id/groupTagView"
        android:text="Click to search or create group: "
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_below="@id/searchUserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/groupTagView"
        android:id="@+id/enterGroup"
        android:onClick="onGoToGroupButtonClick" />

    <TextView
        android:id="@+id/userTagView"
        android:text="Click to search for a user profile: "
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:layout_below="@id/enterGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/userTagView"
        android:id="@+id/goToUserProfile"
        android:onClick="onGoToProfileButtonClick"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:text="Privacy:"
        android:id="@+id/privacy"
        android:layout_below="@+id/goToUserProfile"
        />

    <ToggleButton
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Private?"
        android:id="@+id/privacyToggle"
        android:layout_below="@+id/privacy" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Logout"
        android:id="@+id/logoutButton"
        android:onClick="logout"
        android:layout_below="@+id/privacyToggle" />






</RelativeLayout>


